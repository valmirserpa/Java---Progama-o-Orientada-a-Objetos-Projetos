package pe.estudo.springboot.estruturadedecisao;

import java.util.Scanner;

public class condicao {

	public static void main(String[] args) {

		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Quantas pernas vc tem?");
		int pernas = scanner.nextInt();
		
		
	String tipo;
	
	switch (pernas) {
	case 1:
		tipo="Sací";
		break;

	case 2:
	tipo= "Bípede";
	break;
	
	case 3:
		tipo="Tripé";
		break;
		
	case 4:
		tipo="Quadrúpede";
		
	default:
		tipo="ET";
		break;
		
	}
		System.out.println(tipo);
		
		

	}

}
